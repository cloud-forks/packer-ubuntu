{
  "builders": [
    {
      "accelerator": "kvm",
      "boot_command": [
        "<esc><esc><enter><wait>",
        "/install/vmlinuz auto",
        " console-setup/ask_detect=false <wait>",
        " console-setup/layoutcode=us <wait>",
        " console-setup/modelcode=pc105 <wait>",
        " debconf/frontend=noninteractive <wait>",
        " debian-installer=en_US <wait>",
        " fb=false",
        " initrd=/install/initrd.gz",
        " kbd-chooser/method=us",
        " keyboard-configuration/layout=USA <wait>",
        " keyboard-configuration/variant=USA <wait>",
        " locale=en_US <wait>",
        " netcfg/get_domain=localdomain <wait>",
        " netcfg/get_hostname=localhost <wait>",
        " noapic <wait>",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/15.04.cfg",
        " -- ",
        "<enter>"
      ],
      "boot_wait": "5s",
      "disk_interface": "virtio-scsi",
      "disk_size": 5000,
      "disk_cache": "unsafe",
      "disk_discard": "unmap",
      "disk_compression": true,
      "iso_skip_cache": true,
      "format": "qcow2",
      "headless": true,
      "http_directory": "http",
      "iso_urls": [ "http://releases.ubuntu.com/15.04/ubuntu-15.04-server-amd64.iso" ],
      "net_device": "virtio-net",
      "output_directory": "output/ubuntu-15.04-x86_64-qemu/",
      "machine_type": "pc-i440fx-1.7",
      "qemuargs": [
        [
          "-m",
          "512"
        ]
      ],
      "shutdown_command": "shutdown -h now",
      "ssh_password": "packer",
      "ssh_username": "root",
      "ssh_wait_timeout": "1200s",
      "type": "qemu",
      "vm_name": "ubuntu-15.04-x86_64"
    }
  ],
  "provisioners": [
    {
      "scripts": [
        "scripts/base.sh",
        "scripts/reboot.sh"
      ],
      "type": "shell"
    },
    {
      "scripts": [
        "scripts/cloudinit.sh",
        "scripts/cleanup.sh"
      ],
      "pause_before": "30s",
      "type": "shell"
    },
    {
      "type": "file",
      "source": "files/80-hotplug-cpu-mem.rules",
      "destination": "/etc/udev/rules.d/80-hotplug-cpu-mem.rules"
    }
  ]
}
