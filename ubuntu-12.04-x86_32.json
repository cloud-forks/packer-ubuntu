{
  "builders": [
    {
      "accelerator": "kvm",
      "boot_command": [
        "<esc><esc><enter><wait>",
        "/install/vmlinuz auto",
        " console-setup/ask_detect=false <wait>",
        " console-setup/layoutcode=us <wait>",
        " console-setup/modelcode=pc105 <wait>",
        " debconf/frontend=noninteractive <wait>",
        " debian-installer=en_US <wait>",
        " fb=false",
        " initrd=/install/initrd.gz",
        " kbd-chooser/method=us",
        " keyboard-configuration/layout=USA <wait>",
        " keyboard-configuration/variant=USA <wait>",
        " locale=en_US <wait>",
        " netcfg/get_domain=localdomain <wait>",
        " netcfg/get_hostname=localhost <wait>",
        " noapic <wait>",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/12.04.cfg",
        " -- ",
        "<enter>"
      ],
      "floppy_files": [
          "floppy/*"
      ],
      "boot_wait": "5s",
      "disk_interface": "scsi",
      "disk_size": 5000,
      "disk_cache": "unsafe",
      "disk_discard": "unmap",
      "format": "raw",
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "1214cd22448338b60bb24f583dd8741a",
      "iso_checksum_type": "md5",
      "iso_url": "http://releases.ubuntu.com/12.04/ubuntu-12.04.5-server-i386.iso",
      "net_device": "virtio-net",
      "output_directory": "output/ubuntu-12.04-x86_32-qemu/",
      "machine_type": "pc-i440fx-1.7",
      "qemuargs": [
        [
          "-m",
          "512"
        ]
      ],
      "shutdown_command": "shutdown -h now",
      "ssh_password": "packer",
      "ssh_username": "root",
      "ssh_wait_timeout": "1200s",
      "type": "qemu",
      "vm_name": "ubuntu-12.04-x86_32"
    }
  ],
  "provisioners": [
    {
      "scripts": [
        "scripts/base.sh",
        "scripts/reboot.sh"
      ],
      "type": "shell"
    },
    {
      "scripts": [
        "scripts/cloudinit.sh",
        "scripts/cleanup.sh"
      ],
      "type": "shell",
      "pause_before": "30s"
    }
  ],
  "post-processors": [
    [
      {
        "type": "compress",
        "format": "bgzf",
        "metadata": true,
        "output": "output/ubuntu-12.04-x86_32-compress/",
        "only": ["qemu"]
      },
      {
        "type": "checksum",
        "output": "output/ubuntu-12.04-x86_32-compress/"
      }
    ]
  ]
}
